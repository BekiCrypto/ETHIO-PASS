{
  "openapi": "3.0.0",
  "info": {
    "title": "Ethio Pass API",
    "description": "API for Ethiopian Smart ID and e-KYC services.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "paths": {
    "/verify/ocr": {
      "post": {
        "summary": "Extract text from an ID document",
        "description": "Upload an image of an Ethiopian National ID, passport, or driver's license to extract text content using OCR.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OcrRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful OCR extraction",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OcrResponse"
                }
              }
            }
          }
        }
      }
    },
    "/verify/liveness": {
      "post": {
        "summary": "Perform a selfie liveness check",
        "description": "Upload a selfie image to verify if it's a live person, preventing spoofing.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LivenessRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful liveness check",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LivenessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/verify/match": {
      "post": {
        "summary": "Perform biometric face matching",
        "description": "Compare a photo from an ID document with a selfie to verify they are the same person.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MatchRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful biometric match",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MatchResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OcrRequest": {
        "type": "object",
        "properties": {
          "photoDataUri": {
            "type": "string",
            "format": "uri",
            "description": "A data URI of the ID document image."
          }
        }
      },
      "OcrResponse": {
        "type": "object",
        "properties": {
          "extractedData": {
            "type": "string",
            "description": "The text extracted from the document."
          }
        }
      },
      "LivenessRequest": {
        "type": "object",
        "properties": {
          "photoDataUri": {
            "type": "string",
            "format": "uri",
            "description": "A data URI of the selfie image."
          }
        }
      },
      "LivenessResponse": {
        "type": "object",
        "properties": {
          "isLive": {
            "type": "boolean"
          },
          "confidence": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "MatchRequest": {
        "type": "object",
        "properties": {
          "idPhotoDataUri": {
            "type": "string",
            "format": "uri",
            "description": "A data URI of the ID document image."
          },
          "selfiePhotoDataUri": {
            "type": "string",
            "format": "uri",
            "description": "A data URI of the selfie image."
          }
        }
      },
      "MatchResponse": {
        "type": "object",
        "properties": {
          "match": {
            "type": "boolean"
          },
          "confidence": {
            "type": "number",
            "format": "float"
          },
          "reasoning": {
            "type": "string"
          }
        }
      }
    }
  }
}
